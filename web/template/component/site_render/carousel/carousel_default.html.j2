<div class="flex

    {% if cur_data.alignment and cur_data.alignment != 'parent' %} {{cur_data.alignment}}
    {% else %}                                                     {{cur_style['__style.container.alignment']}}   {% endif %}

">
<div id="default-carousel" data-carousel="slide" class="
    relative 
    w-full

    {% if cur_data.padding and cur_data.padding != 'parent' %} {{cur_data.padding}}
    {% else %}                                                 {{cur_style['__style.container.padding']}}   {% endif %}


    {% if cur_data.width and cur_data.width != 'parent' %} {{cur_data.width}}
    {% else %}                                             {{cur_style['__style.container.width']}}   {% endif %}

    {% if cur_data.width_min and cur_data.width_min != 'parent' %} {{cur_data.width_min}}
    {% else %}                                                     {{cur_style['__style.container.width_min']}}   {% endif %}

    {% if cur_data.width_max and cur_data.width_max != 'parent' %} {{cur_data.width_max}}
    {% else %}                                                     {{cur_style['__style.container.width_max']}}   {% endif %}

    {% if cur_data.height and cur_data.height != 'parent' %} {{cur_data.height}}
    {% else %}                                               {{cur_style['__style.container.height']}}   {% endif %}

">
  <!-- Carousel wrapper -->
  <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
      {% for widget_id in widget_data.include.default %}
        {% include 'component/site_render/page_render_widget_inner.html.j2' %}
      {% endfor %}
  </div>
  <!-- Slider indicators -->
  <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
    {% for widget_id in widget_data.include.default %}
      <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide {{loop.index0}}" data-carousel-slide-to="{{loop.index0}}"></button>
    {% endfor %}
  </div>
  <!-- Slider controls -->
  <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
          <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
          </svg>
          <span class="sr-only">Previous</span>
      </span>
  </button>
  <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
          <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="sr-only">Next</span>
      </span>
  </button>
</div>
</div>

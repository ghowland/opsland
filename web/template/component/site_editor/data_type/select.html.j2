{% set cur_data = {'value': 5, 'options': [{'label': 'L1', 'value': 1}, {'label': 'R2', 'value': 2}]} %}

<!-- NOTE: This is Static logic/config.  Do not try to make anything dynamic here.  This is just a static list.  Do dynamic things elsewhere, forever. -->
<form class="max-w-sm mx-auto">
  <label for="__edit.{{widget_id}}.{{edit_key}}" class="mb-2 text-sm font-medium text-gray-900">{{edit_key}}</label>
  <select id="__edit.{{widget_id}}.{{edit_key}}" onchange="RenderWidget()" class="widget_input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
    {% for option in cur_data.options %}
    <option value="{{option.value}}" {% if cur_data.value == option.value %}selected{% endif %}>{{option.label}}</option>
    {% endfor %}
  </select>
</form>

<!-- <br><b>Widget:</b> {{ cur_data }}<br> -->

{% if cur_data.import_data %}

  <h3 class="text-xl text-gray-900 mt-3">{{ cur_data.label }}</h3>

  {% set top_data = cur_data %}
  {% for cur_data in cur_data.import_data %}
    {% include 'component/site_editor/widget_router.html.j2' %}
  {% endfor %}
  {% set cur_data = top_data %}

  <br>

{% elif cur_data.list_data %}

  <h3 class="text-xl text-gray-900 mt-3">{{ cur_data.label }}</h3>

  <br>Has list data: {{ cur_data.import_data }}<br>

{% else %}

  {% if cur_data.type == 'int' %}
    {% include 'component/site_editor/widget_type/int.html.j2' %}
    
  {% elif cur_data.type == 'color' %}
    {% include 'component/site_editor/widget_type/color.html.j2' %}

  {% elif cur_data.type == 'icon' %}
    {% include 'component/site_editor/widget_type/icon.html.j2' %}

  {% elif cur_data.type == 'text' %}
    {% include 'component/site_editor/widget_type/text.html.j2' %}

  {% elif cur_data.type == 'checkbox' %}
    {% include 'component/site_editor/widget_type/checkbox.html.j2' %}

  {% else %}
    Unknown Type: {{cur_data.type}}
  {% endif %}

{% endif %}

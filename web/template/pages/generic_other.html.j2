<script>
  function DoCrudTest()
  {

    elems = document.getElementsByClassName("crud-collect");

    var result = '';
    for (let i = 0; i < elems.length; i++) {
      result += `\n name: ${elems[i].name} =  ${elems[i].value}`;
    }

    alert(result)
  }
</script>


